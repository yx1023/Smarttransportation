<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/lan"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/youjiantoulan"
            android:id="@+id/fanhui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETC充值"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_marginLeft="400dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="150dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车   牌   号 ："
                android:textSize="40dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:background="@null"
                android:id="@+id/et_plate"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="150dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充 值 金 额 ："
            android:textSize="40dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="10元"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:background="@drawable/huikuang"
            android:layout_marginLeft="30dp"
            android:id="@+id/ten"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="50元"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:background="@drawable/huikuang"
            android:layout_marginLeft="30dp"
            android:id="@+id/fifty"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="100元"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:background="@drawable/huikuang"
            android:layout_marginLeft="30dp"
            android:id="@+id/hundred"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="420dp"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:background="@drawable/bg"
            android:inputType="number"
            android:hint="1-999"
            android:textSize="40dp"
            android:id="@+id/et_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:text="元"/>

    </LinearLayout>

    <Button
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:text="充  值"
        android:background="@drawable/butten_hui"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/TJ"/>

</LinearLayout>