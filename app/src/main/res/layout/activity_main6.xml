<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/lan"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/caidan"
            android:id="@+id/caidan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时显示"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_marginLeft="420dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温度"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/text"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/VP"
        android:layout_weight="1"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"

            android:layout_marginBottom="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_WD"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ag1" />
            <TextView
                android:id="@+id/tv_SD"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ag2"
                />
            <TextView
                android:id="@+id/tv_PM25"
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:background="@drawable/ag2"
                />
            <TextView
                android:id="@+id/tv_CO2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ag2"
                />
            <TextView
                android:id="@+id/tv_GZ"
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:background="@drawable/ag2"
                />
            <TextView
                android:id="@+id/tv_DLZT"
                android:layout_width="40dp"
