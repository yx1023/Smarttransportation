<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0098cb"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mune17"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/caidan"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="生活指数"
                android:textColor="@color/white"
                android:textSize="80dp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/zwx"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="#DAEDFE"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/zhiwaixianzhishu"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ZWX_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中等  "
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                    <TextView
                        android:id="@+id/ZWX_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/ZWX_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="涂擦SPF大于15、PA+防晒护肤品"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/gm"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="#DAEDFE"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ganmaozhisu"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/GMZS_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中等  "
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                    <TextView
                        android:id="@+id/GMZS_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/GMZS_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="涂擦SPF大于15、PA+防晒护肤品"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/cy"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="#DAEDFE"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/chuanyizhisu"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/CYZS_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中等  "
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                    <TextView
                        android:id="@+id/CYZS_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/CYZS_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="涂擦SPF大于15、PA+防晒护肤品"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/yd"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:background="#DAEDFE"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/yundongzhisu"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/YDZS_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中等  "
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                    <TextView
                        android:id="@+id/YDZS_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/YDZS_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="涂擦SPF大于15、PA+防晒护肤品"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kq"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:background="#DAEDFE"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/kongqiwurankuoanzhisu"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/KQWRZS_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中等  "
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                    <TextView
                        android:id="@+id/KQWRZS_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(100)"
                        android:textSize="40dp"
                        android:textColor="#03A9F4"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/KQWRZS_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="涂擦SPF大于15、PA+防晒护肤品"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>