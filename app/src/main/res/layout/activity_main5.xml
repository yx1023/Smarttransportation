<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0098cb"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mune5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/caidan"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="环境指标"
                android:textColor="@color/white"
                android:textSize="40dp"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@drawable/yuan"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/yuan"
                android:layout_marginRight="5dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光照"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/yuan"
                android:layout_marginRight="5dp"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/yuan"
                android:layout_marginRight="5dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/yuan"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/wwww"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="道路状态"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="40dp"></TextView>
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/yuan"
                android:layout_marginRight="5dp"></TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>